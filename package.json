{
  "name": "TsPlaywrightPomBdd",
  "version": "1.0.0",
  "description": "An example of a Playwright TS POM BDD Project",
  "main": "index.js",
  "scripts": {
    "test": "npx bddgen && npx playwright test",
    "tagged-test": "npx bddgen && npx playwright test --grep ",
    "not-tagged-test": "npx bddgen && npx playwright test --grep-invert ",
    "report": "npx playwright show-report reports/cucumber",
    "report:debug": "npx playwright show-report reports/playwright"
  },
  "keywords": ["playwright", "BDD", "POM"],
  "author": "Stefan DeWolfe",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.4",
    "dotenv": "^16.4.7",
    "playwright": "^1.50.1",
    "playwright-bdd": "^8.2.0",
    "winston": "^3.17.0"
  },
  "dependencies": {
    "cucumber-html-reporter": "^7.2.0"
  }
}
