{
    "default": {
        "timeout": "6000",
        "dryRun": false,
        "formatOptions":{
            "snippetInterface":"async-await"
        },
        "paths": [
            "src/tests/features/*.features",
            "src/tests/features/**/*.features"
        ],
        "require": [
            "src/tests/steps/*.ts",
            "src/tests/pages/*.ts",
            "src/tests/fixtures/*.ts",
            "src/tests/utils/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "html:test-results/cucumber-report.html"
        ]
    }
}